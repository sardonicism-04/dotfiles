configuration {
    show-icons: false;
    display-drun: "";
    drun-display-format: "{icon}";
    location: 0;
    sidebar-mode: false;
}

@import "./colors.rasi"

* {
    background-color: @tr;
    font: "feather 18";
}

window {
    transparency: "real";
    anchor: center;
    location: center;
    width: 20%;
    border-radius: 6;
    border: 2px;
    border-color: @light-purple-solid;
}

mainbox {
    children: [ inputbar ];
    padding: 0% 0% 0% 0%;
    background-color: @base;
}

listview {
    enabled: false;
}

inputbar {
    background-color: @bg;
    padding: 4;
    border-radius: 6;
    children: [ prompt, entry ];
    margin: 5;
}

entry {
    font: "Fira Code Regular 14";
    text-color: white;
    padding: 8 12 8 12;
}

prompt {
    enabled: true;
    font: "Fira Code Regular 14";
    text-color: @light-purple-solid;
    padding: 8 0 8 12;
}

