@import "../colors.rasi"

* {
    background-color: @base;
    font: "feather 48";
}

window {
    transparency: "real";
    anchor: south;
    location: south;
    padding: 10;
    background-color: @base;
    border-radius: 6;
    y-offset: -5%;
    border: 2px;
    border-color: @light-purple-solid;
}

inputbar {
    enabled: false;
}

listview {
    cycle: true;
    dynamic: true;
    lines: 1;
    fixed-height: false;
    spacing: 8;
}

element {
    background-color: @bg;
    vertical-align: center;
    horizontal-align: center;
    border-radius: 6;
    padding: 9 0 0 9;
}

element-text {
    color: white;
    background-color: transparent;
}

element-text.selected {
    color: @bg;
}

element.selected {
    background-color: @light-purple-solid;
    // border: 0 0 5 0;
    // border-color: @light-purple-solid;
}

